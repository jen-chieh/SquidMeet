@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileUserService UserService

@model SquidMeet.WebSite.Pages.Product.ProfileBioUpdateModel
@{
    ViewData["Title"] = "Update profile bio";
}


<div class="container" style="margin-top:200px; margin-bottom:340px">
    <form method="post">
        <h2 style="margin-bottom:100px">Update Your Bio</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.UserProfile.user_id)

        <div class="form-group">
            <input asp-for="UserProfile.bio" class="form-control" />
            <span asp-validation-for="UserProfile.bio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}