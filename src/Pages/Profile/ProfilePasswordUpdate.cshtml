@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileUserService UserService
@model SquidMeet.WebSite.Pages.Product.ProfilePasswordUpdateModel
@{
    ViewData["Title"] = "Update profile password";
}

<h1>Update Your Password</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.UserProfile.user_id)


        <div class="form-group">
            <label asp-for="UserProfile.password" class="control-label">Change your password</label>
            <input asp-for="UserProfile.password" class="form-control" />
            <span asp-validation-for="UserProfile.password" class="text-danger"></span>
        </div>



        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" id="mySubmit" />
        </div>
    </form>

</div>
<script type="text/javascript">
    $(document).ready(function() {
       $('#mySubmit').hide();
    });
</script>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}