@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileUserService UserService
@model SquidMeet.WebSite.Pages.Product.ProfileAgeUpdateModel
@{
    ViewData["Title"] = "Update profile age";
}

<div class="container profile-age-update-container">
    <form method="post">
        <h2 class="profile-age-updat-h2">Update Your Age</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.UserProfile.user_id)


        <div class="form-group">
            <input asp-for="UserProfile.age" class="form-control" />
            <span asp-validation-for="UserProfile.age" class="text-danger"></span>
        </div>



        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}