@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileUserService UserService
@model SquidMeet.WebSite.Pages.Product.ProfileNameUpdateModel
@{
    ViewData["Title"] = "Update profile name";
}
<h1>Update Your name</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.UserProfile.user_id)


        <div class="form-group">
            <label asp-for="UserProfile.name" class="control-label">Change your name</label>
            <input asp-for="UserProfile.name" class="form-control"/>
            <span asp-validation-for="UserProfile.name" class="text-danger"></span>
        </div>
        
        

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}