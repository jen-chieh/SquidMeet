    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="row" style="border-radius: 10px;">

                <div class="col-lg-8 pt-4 pt-lg-0 content">
                    <h3>@Model.Meetup.Title</h3>
                    <p class="fst-italic">
                        @Model.Meetup.Description
                    </p>
                </div>

                <section id="contact" class="contact" style="background-color: #f6f7f8">
                    <div class="container">

                        <div class="section-title">
                            <h3 style="display:inline-block; margin-top:0px; margin-left:120px; margin-top:10px">Info</h3>
                        </div>
                        <div style="margin-top:-40px">

                            <div class="col-lg-12" style="width:340px">
                                <div class="info" style="padding:10px">
                                    <div class="address">
                                        <i class="bi bi-geo-alt"></i>
                                        <h4>Location:</h4>
                                        <p>@Model.Meetup.location</p>
                                    </div>

                                    <div class="email">
                                        <i class="bi bi-envelope"></i>
                                        <h4>Email:</h4>
                                        <p>squid@squid.com</p>
                                    </div>

                                    <div class="phone">
                                        <i class="bi bi-phone"></i>
                                        <h4>Call:</h4>
                                        <p>+1 5589 55488 55s</p>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </section><!-- End Contact Section -->
